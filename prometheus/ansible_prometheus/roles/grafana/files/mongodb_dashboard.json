{
    "dashboard": {
        "id": null,
        "uid": "mongodb_dashboard",
        "title": "MongoDB Dashboard",
        "tags": [],
        "timezone": "browser",
        "schemaVersion": 26,
        "version": 1,
        "panels": [
            {
                "type": "graph",
                "title": "Operations Per Second",
                "targets": [
                    {
                        "target": "sum(rate(mongodb_op_counters_total[1m]))",
                        "refId": "A"
                    }
                ],
                "xaxis": {
                    "mode": "time"
                },
                "yaxes": [
                    {
                        "format": "short",
                        "label": "Operations",
                        "logBase": 1,
                        "min": 0,
                        "max": null
                    },
                    {
                        "format": "short",
                        "label": null,
                        "logBase": 1,
                        "min": 0,
                        "max": null
                    }
                ]
            },
            {
                "type": "graph",
                "title": "Memory Usage",
                "targets": [
                    {
                        "target": "mongodb_mem_resident_bytes / 1024 / 1024",
                        "refId": "A"
                    }
                ],
                "xaxis": {
                    "mode": "time"
                },
                "yaxes": [
                    {
                        "format": "MB",
                        "label": "Memory (MB)",
                        "logBase": 1,
                        "min": 0,
                        "max": null
                    },
                    {
                        "format": "short",
                        "label": null,
                        "logBase": 1,
                        "min": 0,
                        "max": null
                    }
                ]
            },
            {
                "type": "graph",
                "title": "Read and Write Operations",
                "targets": [
                    {
                        "target": "sum(rate(mongodb_op_counters_read[1m]))",
                        "refId": "A"
                    },
                    {
                        "target": "sum(rate(mongodb_op_counters_write[1m]))",
                        "refId": "B"
                    }
                ],
                "xaxis": {
                    "mode": "time"
                },
                "yaxes": [
                    {
                        "format": "short",
                        "label": "Operations",
                        "logBase": 1,
                        "min": 0,
                        "max": null
                    },
                    {
                        "format": "short",
                        "label": null,
                        "logBase": 1,
                        "min": 0,
                        "max": null
                    }
                ],
                "seriesOverrides": [
                    {
                        "alias": "Read Operations",
                        "color": "green"
                    },
                    {
                        "alias": "Write Operations",
                        "color": "red"
                    }
                ]
            }
        ]
    }
}