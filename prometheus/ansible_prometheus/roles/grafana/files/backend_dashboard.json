{
    "dashboard": {
        "id": null,
        "uid": "backend_dashboard",
        "title": "Backend Dashboard",
        "tags": [],
        "timezone": "browser",
        "schemaVersion": 26,
        "version": 1,
        "panels": [
            {
                "type": "graph",
                "title": "CPU Usage",
                "targets": [
                    {
                        "target": "avg(irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100",
                        "refId": "A"
                    }
                ],
                "xaxis": {
                    "mode": "time"
                },
                "yaxes": [
                    {
                        "format": "percent",
                        "label": "CPU Usage",
                        "logBase": 1,
                        "min": 0,
                        "max": 100
                    },
                    {
                        "format": "short",
                        "label": null,
                        "logBase": 1,
                        "min": 0,
                        "max": null
                    }
                ]
            },
            {
                "type": "graph",
                "title": "Memory Usage",
                "targets": [
                    {
                        "target": "avg((node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes) / node_memory_MemTotal_bytes) * 100",
                        "refId": "A"
                    }
                ],
                "xaxis": {
                    "mode": "time"
                },
                "yaxes": [
                    {
                        "format": "percent",
                        "label": "Memory Usage",
                        "logBase": 1,
                        "min": 0,
                        "max": 100
                    },
                    {
                        "format": "short",
                        "label": null,
                        "logBase": 1,
                        "min": 0,
                        "max": null
                    }
                ]
            },
            {
                "type": "graph",
                "title": "Request Duration",
                "targets": [
                    {
                        "target": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
                        "refId": "A"
                    }
                ],
                "xaxis": {
                    "mode": "time"
                },
                "yaxes": [
                    {
                        "format": "ms",
                        "label": "Time (ms)",
                        "logBase": 1,
                        "min": 0,
                        "max": null
                    },
                    {
                        "format": "short",
                        "label": null,
                        "logBase": 1,
                        "min": 0,
                        "max": null
                    }
                ]
            }
        ]
    }
}