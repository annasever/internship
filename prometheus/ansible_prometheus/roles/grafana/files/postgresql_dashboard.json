{
    "dashboard": {
        "id": null,
        "uid": "postgresql_dashboard",
        "title": "PostgreSQL Dashboard",
        "tags": [],
        "timezone": "browser",
        "schemaVersion": 26,
        "version": 1,
        "panels": [
            {
                "type": "graph",
                "title": "Active Connections",
                "targets": [
                    {
                        "target": "count(pg_stat_activity)",
                        "refId": "A"
                    }
                ],
                "xaxis": {
                    "mode": "time"
                },
                "yaxes": [
                    {
                        "format": "short",
                        "label": "Connections",
                        "logBase": 1,
                        "min": 0,
                        "max": null
                    },
                    {
                        "format": "short",
                        "label": null,
                        "logBase": 1,
                        "min": 0,
                        "max": null
                    }
                ]
            },
            {
                "type": "graph",
                "title": "Query Duration",
                "targets": [
                    {
                        "target": "avg(pg_stat_statements_total_time)",
                        "refId": "A"
                    }
                ],
                "xaxis": {
                    "mode": "time"
                },
                "yaxes": [
                    {
                        "format": "ms",
                        "label": "Time (ms)",
                        "logBase": 1,
                        "min": 0,
                        "max": null
                    },
                    {
                        "format": "short",
                        "label": null,
                        "logBase": 1,
                        "min": 0,
                        "max": null
                    }
                ]
            },
            {
                "type": "singlestat",
                "title": "Deadlocks",
                "targets": [
                    {
                        "target": "sum(pg_stat_database.deadlocks)",
                        "refId": "A"
                    }
                ],
                "valueName": "current",
                "prefix": "",
                "thresholds": "0,1",
                "colorBackground": true,
                "colors": [
                    "green",
                    "red"
                ]
            }
        ]
    }
}