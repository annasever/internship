---
global:
  scrape_interval: 15s

scrape_configs:
  - job_name: 'prometheus'
    scrape_interval: 5s
    static_configs:
      - targets: ['localhost:9090']
  - job_name: 'node_exporter'
    scrape_interval: 5s
    static_configs:
      - targets:
          [ {% for host in groups['tag_Name_backend'] %}
          '{{ hostvars[host].ansible_host }}:9100',
          {% endfor %}
          {% for host in groups['tag_Name_frontend'] %}
          '{{ hostvars[host].ansible_host }}:9100',
          {% endfor %}
          {% for host in groups['tag_Name_databases'] %}
          '{{ hostvars[host].ansible_host }}:9100'
          {% endfor %} ]
          
rule_files:
  - alertrules.yml

alerting:
  alertmanagers:
    - static_configs:
        - targets: ['{{ alertmanager_ip }}:9093']